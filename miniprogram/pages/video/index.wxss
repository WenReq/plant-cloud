/* pages/video/index.wxss */

page {
  background-color: #F7F7F7;
}

.page {
  width: 100vw;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}

.main {
  width: 100%;
  background-color: #fff;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  padding-bottom: 10rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title-btn {
  width: 130rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #28B350;
  border-radius: 24rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}

.title-btn:active {
  background-color: rgba(40, 179, 80, .7);
}

.video-list {
  width: 100%;
  margin-top: 36rpx;
}

.video-item {
  width: 100%;
  height: 350rpx;
  border-radius: 5rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.video-title {
  width: 142rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  text-align: center;
  color: #2C2C2C;
  border-radius: 5rpx;
  margin: 20rpx;
}

.video-image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  margin-left: -40rpx;
  top: 50%;
  margin-top: -40rpx;
}

.stop-image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}