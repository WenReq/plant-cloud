/* pages/devicemoney/devicemoney.wxss */
page {
  height: 100%;
  background-color: #f1f1f1;

}

.photoList {
  background-color: white;
  border-radius: 8px;
  margin: 12px 12px;
  padding-bottom: 12px;
}

.photoListHeader {
  
  display: block;
  width: 100%;
  border-bottom: 1px solid #f1f1f1;
  overflow: hidden;
  height: 90rpx;
}

.photoList .photoListHeader text {
  padding-left: 24rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: inline-block;
  overflow: hidden;
  width: 70%;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.photoList .photoListHeader button {
  float: right;
  margin-right: 12px;  
  margin-top: 12px;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #38b350;
  color: white;
  border-radius: 24px; 
  font-size: 12px;
  border: 0px solid #fff;
}

.photoList .photoListHeader button::after {
  border-radius: 90rpx;
  border: 0;
}

.photo-item-list {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}

.photo-item-list .photo-cell {
  width: 49%;
  height: 160px;
  text-align: center;
  margin-top: 12px;
}

.photo-item-list .photo-cell image {
    width: 90%;
    height: 100%;
    border-radius: 6rpx;
}

.round-click{
      height: 100rpx;
      width: 100rpx;
      background-image: linear-gradient(#51DA88, #28B350);
      border-radius: 100%;
      position: fixed;
      bottom: 150rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9;
      margin:0 auto;
      left:0;
      right:0;
  }
  .round-click view{
      font-size: 28rpx;
      max-width: 80rpx;
      color: #fff;
      text-align: center;
      align-items: center;
      width: 100%;
      height: 100%;
      padding-top: 50%;
  }
  

  /* 模态框 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  }
  
  .modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background-color: white;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
  }
  
  .modal-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color: black;
  font-weight: 900;
  text-align: center;
  background-color: white;
  border-bottom: 1px solid  #f1f1f1;
  }
  
  .modal-content {
  
  }
  
  .concent_list{
  width: 100%;
  height: 100rpx;
  /* border-bottom: 1px solid #ccc; */
  line-height: 100rpx;
  text-align: center;
  }
  
  
  
  .modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
  }
  
  .btn-cancel {
  width: 100%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
  border-top: 1px solid  #f1f1f1;
  }
  
.noData{
  width:100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  justify-content: center;
  align-items: center;
}

.noData view{
  font-size: 24rpx;
  color:#888;
  margin-top: 40rpx;
}