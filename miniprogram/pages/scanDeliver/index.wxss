/* pages/scanDeliver/index.wxss */
page {
  height: 100%;
  background-color: #f1f1f1;
}

.list {
  background-color: white;
  border-radius: 8px;
  margin: 12px 12px;
}

.listHeader {
  display: flex;
  align-items: center;
  width: 100%;
  border-bottom: 1px solid #f1f1f1;
}

.list .listHeader text {
  padding-left: 24rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btnList{
  margin-left: auto;
}
.list .listHeader .btnList button {
  background-color: #38b350;
  color: white;
  border-radius: 35rpx; 
  font-size: 26rpx;
  height: 50rpx;
  margin: 0 12rpx;
}
.btnRef{
  width: 100rpx;
  padding: 10rpx;
  background-color: #28B350;
  border-radius: 30rpx;
  color:white;
  font-size: 28rpx;
  text-align: center;
}
.btnScan{
  width: 160rpx;
  padding: 10rpx;
  background-color: #28B350;
  border-radius: 30rpx;
  color:white;
  font-size: 28rpx;
  text-align: center;
  margin-right: 10rpx;
}
.list .listHeader button::after {
  border-radius: 90rpx;
  border: 0;
}

.tableViewCell {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.tableViewCellHeader {
  flex: 1;
  text-align: center;
}
.tableViewCell .tableViewCellHeader text {
  margin-top: 12px;
  margin-bottom: 12px;
  color: #999999;
  font-size: 24rpx;
  line-height: 40px;
}

.tableViewCellitem {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 15px;
}


.table {
  border: 0px solid darkgray;
  font-size: 26rpx;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .th {
  width: 40%;
  justify-content: center;
  display: flex;
  height: 3rem;
  align-items: center;
 }

 .dialogText{
  display: flex;
  justify-content: center;
  padding: 80rpx;
}

.deliveryType{
  width:45%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.round-click{
  height: 100rpx;
  width: 100rpx;
  background-image: linear-gradient(#51DA88, #28B350);
  border-radius: 100%;
  position: fixed;
  bottom: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
  margin:0 auto;
  left:0;
  right:0;
}
.round-click view{
  font-size: 28rpx;
  max-width: 80rpx;
  color: #fff;
  text-align: center;
}